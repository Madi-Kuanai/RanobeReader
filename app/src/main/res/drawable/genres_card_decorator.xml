<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:endColor="#02E7FC"
                android:centerColor="#395998"
                android:startColor="#6D16E6" />
            <corners android:radius="10dp" />
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
            <size
                android:width="162dp"
                android:height="40dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?attr/appbarColor" />
            <corners android:radius="10dp" />
            <size
                android:width="51dp"
                android:height="5dp" />
        </shape>
    </item>
</layer-list>