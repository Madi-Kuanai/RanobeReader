        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
            <size
                android:width="162dp"
                android:height="40dp" />
        </shape>
    </item>
    <item>
        <shape
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shape="rectangle">
            <solid android:color="?attr/genreCard" />
            <corners android:radius="10dp" />
            <size
                android:width="51dp"
                android:height="5dp" />
        </shape>
    </item>
</layer-list>